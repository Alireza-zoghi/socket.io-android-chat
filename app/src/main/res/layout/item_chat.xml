<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_other_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_xlarge"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_middle"
        android:paddingTop="@dimen/spacing_xsmall"
        android:paddingRight="@dimen/spacing_middle"
        android:paddingBottom="@dimen/spacing_xsmall">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:minHeight="32.0dip"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="1.0dip"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minWidth="180.0dip"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:text="alireza"
                    android:textColor="@color/username8" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:text="Message content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/black"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="02:30 AM"
                        android:textColor="@color/grey_40"
                        android:textSize="12.0sp" />

                    <View
                        android:layout_width="@dimen/spacing_medium"
                        android:layout_height="0.0dip" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/spacing_mlarge"
            android:layout_height="0.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xlarge"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_middle"
        android:paddingTop="1.0dip"
        android:paddingRight="@dimen/spacing_middle"
        android:paddingBottom="1.0dip">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:minHeight="32.0dip"
            app:cardBackgroundColor="#ffefffde"
            app:cardCornerRadius="5.0dip"
            app:cardElevation="1.0dip"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="180.0dip"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/text_my_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:text="Message content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/black"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_my_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="02:30 AM"
                        android:textColor="#ff58b346"
                        android:textSize="12.0sp" />

                    <View
                        android:layout_width="@dimen/spacing_medium"
                        android:layout_height="0.0dip" />

                    <ImageView
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="@dimen/spacing_large"
                        android:src="@drawable/ic_done_all"
                        android:tint="#ff58b346" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="6dp"
            android:src="@drawable/avatar" />
    </LinearLayout>

</LinearLayout>
